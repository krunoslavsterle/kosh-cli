projectName: Kosh Test Project

services:
  - name: infra 
    type: docker-compose 
    path: /home/krunoslav/Workspace/Work/kosh-test-project/devops/local
    logs: true
    
  - name: gateway
    type: caddy
    logs: false
    path: /home/krunoslav/Workspace/Work/kosh-test-project/devops/local
    args: "--config Caddyfile"   
    
  - name: core-migration
    type: dotnet-run
    path: /home/krunoslav/Workspace/Work/kosh-test-project/src/apps/KoshTestProject.Console 
        
  - name: api
    type: dotnet-watch
    path: /home/krunoslav/Workspace/Work/kosh-test-project/src/apps/KoshTestProject.Api
    args: "--urls http://localhost:6001"
    env:
      ASPNETCORE_ENVIRONMENT: Development
      
  - name: admin-api
    type: dotnet-watch
    path: /home/krunoslav/Workspace/Work/kosh-test-project/src/apps/KoshTestProject.Admin.Api
    args: "--urls http://localhost:6002"
    env:
      ASPNETCORE_ENVIRONMENT: Development
      
  - name: frontend-react
    type: node
    path: /home/krunoslav/Workspace/Work/kosh-test-project/src/apps/kosh-test-project-react
      
hosts:
  - domain: kosh-test.api.localhost
  - domain: kosh-test.localhost